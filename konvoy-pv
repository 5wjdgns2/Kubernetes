apiVersion: v1
kind: PersistentVolume
metadata:
  name: konvoy-pv-volume-10-1
  labels:
    type: local
spec:
  storageClassName: localvolumeprovisioner
  capacity:
    storage: 10Gi
  accessModes:
    - ReadWriteOnce
  hostPath:
    path: "/pv/konvoy/pv-10-1"
---
